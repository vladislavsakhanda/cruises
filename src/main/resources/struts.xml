<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>

    <package name="basicstruts2" extends="struts-default">

        <action name="register" class="com.my.classes.Register" method="execute">
            <result>/WEB-INF/pages/main.jsp</result>
            <result name="success">/WEB-INF/pages/registration/successRegistration.jsp</result>
            <result name="input">/WEB-INF/pages/registration/register.jsp</result>
            <result name="error">/WEB-INF/pages/registration/errorRegistration.jsp</result>
        </action>

        <action name="login">
            <result>/WEB-INF/pages/registration/login.jsp</result>
        </action>

        <action name="loginprocess" class="com.my.classes.Login" method="execute">
            <result>/WEB-INF/pages/main.jsp</result>
            <result name="success">/WEB-INF/pages/registration/successLogin.jsp</result>
            <result name="input">/WEB-INF/pages/registration/login.jsp</result>
            <result name="error">/WEB-INF/pages/registration/errorLogin.jsp</result>
        </action>

        <action name="logout" class="com.my.classes.Login" method="logout">
            <result name="success">/WEB-INF/pages/registration/successLogout.jsp</result>
        </action>

        <action name="profile" class="com.my.classes.Profile">
            <result name="success">/WEB-INF/pages/registration/successProfile.jsp</result>
            <result name="error">/WEB-INF/pages/registration/errorProfile.jsp</result>
        </action>
    </package>
</struts>